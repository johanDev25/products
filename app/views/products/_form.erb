<div class="container">
   <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h1><%= form_title %></h1>
      <%= form_for @product do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "ingresa el nombre del producto" %>
      </div>
      <div class="form-group">
        <%= f.number_field :price, class: "form-control input-lg", placeholder: "ingresa el precio del producto" %>
      </div>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_hidden: false  do |c| %>
       <div class="checkbox">
         <%= c.label do %>
           <%= c.check_box %> <%= c.object.name %>
         <% end %>
       </div>
      <% end %>
      <div>
        <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
